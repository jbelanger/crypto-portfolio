{
  "name": "@exitbook/platform-projections",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./port": {
      "types": "./dist/port.d.ts",
      "default": "./dist/port.js"
    },
    "./model": {
      "types": "./dist/model.d.ts",
      "default": "./dist/model.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "default": "./dist/registry.js"
    },
    "./compose/*": {
      "types": "./dist/compose/*.d.ts",
      "default": "./dist/compose/*.js"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "default": "./dist/adapters/*.js"
    },
    "./impl/*": {
      "types": "./dist/impl/*.d.ts",
      "default": "./dist/impl/*.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "dev": "tsc -b -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@exitbook/core": "workspace:*",
    "@exitbook/platform-messaging": "workspace:*",
    "effect": "^3.0.0"
  },
  "devDependencies": {
    "@internal/tsconfig": "workspace:*",
    "@types/node": "^24.3.1",
    "rimraf": "^5.0.0"
  }
}
