{
  "name": "@crypto/import",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "private": true,
  "description": "Cryptocurrency transaction import package with multi-provider support",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "postinstall": "pnpm list --depth=0 || echo '⚠️  Warning: Missing peer dependencies. Please install them manually.'",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint \"src/**/*.ts*\"",
    "typecheck": "tsc --noEmit",
    "test": "jest --detectOpenHandles --forceExit --passWithNoTests",
    "tsc": "tsc --project tsconfig.json",
    "clean": "rm -rf node_modules",
    "providers:list": "tsx src/scripts/list-providers.ts",
    "providers:validate": "tsx src/scripts/validate-providers.ts",
    "config:generate": "tsx src/scripts/generate-config.ts",
    "config:validate": "tsx src/scripts/validate-config.ts"
  },
  "dependencies": {
    "@scure/base": "^1.2.6",
    "@scure/bip32": "^1.7.0",
    "bitcoinjs-lib": "^6.1.7",
    "ccxt": "^4.5.1",
    "csv-parse": "^6.1.0",
    "decimal.js": "^10.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@crypto/core": "workspace:*",
    "@crypto/data": "workspace:*",
    "@crypto/shared-logger": "workspace:*",
    "@crypto/shared-utils": "workspace:*"
  }
}