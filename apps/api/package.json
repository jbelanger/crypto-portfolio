{
  "name": "exitbook-api",
  "version": "1.0.0",
  "description": "ExitBook REST API",
  "main": "main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint:fix": "eslint \"src/**/*.ts*\" --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@exitbook/core": "workspace:*",
    "@exitbook/database": "workspace:*",
    "@exitbook/import": "workspace:*",
    "@exitbook/ledger": "workspace:*",
    "@exitbook/providers": "workspace:*",
    "@exitbook/shared-config": "workspace:*",
    "@exitbook/shared-logger": "workspace:*",
    "@exitbook/shared-tsconfig": "workspace:*",
    "@exitbook/shared-utils": "workspace:*",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@types/express": "^5.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
