{
  "name": "crypto-portfolio-cli",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf node_modules dist",
    "dev": "tsx --env-file-if-exists=.env ./index.ts",
    "export": "tsx ./index.ts export",
    "import": "tsx ./index.ts import",
    "import:verify": "tsx ./index.ts import --verify",
    "lint": "eslint \"*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "mkdir -p data/logs && pnpm run build",
    "start": "node dist/index.js",
    "status": "tsx ./index.ts status",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "verify": "tsx ./index.ts verify"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.36.0",
    "@crypto/balance": "workspace:*",
    "@crypto/core": "workspace:*",
    "@crypto/data": "workspace:*",
    "@crypto/import": "workspace:*",
    "@crypto/shared-logger": "workspace:*",
    "@crypto/shared-utils": "workspace:*",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "jose": "^6.0.13",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
