{
  "name": "exitbook-cli",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "clean": "rm -rf node_modules dist",
    "dev": "tsx --env-file-if-exists=../../.env ./src/index.ts",
    "export": "tsx ./src/index.ts export",
    "import": "tsx ./src/index.ts import",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "mkdir -p data/logs && pnpm run build",
    "status": "tsx ./src/index.ts status",
    "test": "vitest run",
    "verify": "tsx ./src/index.ts verify"
  },
  "dependencies": {
    "@exitbook/balance": "workspace:*",
    "@exitbook/core": "workspace:*",
    "@exitbook/data": "workspace:*",
    "@exitbook/import": "workspace:*",
    "@exitbook/shared-logger": "workspace:*",
    "@exitbook/shared-utils": "workspace:*",
    "commander": "^14.0.0",
    "jose": "^6.0.13",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
