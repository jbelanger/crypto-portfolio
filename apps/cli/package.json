{
  "name": "crypto-portfolio-cli",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=debug tsx ./index.ts",
    "start": "node dist/cli/index.js",
    "import": "tsx src/cli/index.ts import",
    "import:verify": "tsx src/cli/index.ts import --verify",
    "verify": "tsx src/cli/index.ts verify",
    "status": "tsx src/cli/index.ts status",
    "setup": "mkdir -p data/logs && npm run build"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "reflect-metadata": "^0.2.2",
    "@crypto/core": "workspace:*",
    "@crypto/data": "workspace:*",
    "@crypto/import": "workspace:*",
    "@crypto/shared-logger": "workspace:*",
    "@crypto/shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}