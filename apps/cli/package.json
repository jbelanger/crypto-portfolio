{
  "name": "crypto-portfolio-cli",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf node_modules dist",
    "dev": "LOG_LEVEL=debug tsx ./index.ts",
    "start": "node dist/index.js",
    "import": "tsx ./index.ts import",
    "import:verify": "tsx ./index.ts import --verify",
    "verify": "tsx ./index.ts verify",
    "status": "tsx ./index.ts status",
    "export": "tsx ./index.ts export",
    "test": "tsx ./index.ts test",
    "setup": "mkdir -p data/logs && pnpm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "reflect-metadata": "^0.2.2",
    "@crypto/core": "workspace:*",
    "@crypto/data": "workspace:*",
    "@crypto/import": "workspace:*",
    "@crypto/shared-logger": "workspace:*",
    "@crypto/shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}