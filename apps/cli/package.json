{
  "name": "crypto-portfolio-cli",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=debug tsx ./index.ts",
    "start": "node dist/cli/index.js",
    "import": "tsx src/cli/index.ts import",
    "import:verify": "tsx src/cli/index.ts import --verify",
    "verify": "tsx src/cli/index.ts verify",
    "status": "tsx src/cli/index.ts status",
    "setup": "mkdir -p data/logs && npm run build"
  },
  "dependencies": {
    "@scure/base": "^1.2.6",
    "@scure/bip32": "^1.7.0",
    "bip32": "5.0.0-rc.0",
    "bitcoinjs-lib": "^6.1.7",
    "ccxt": "^4.5.1",
    "commander": "^14.0.0",
    "csv-parse": "^6.1.0",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "kucoin-universal-sdk": "^1.3.0",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.6",
    "tiny-secp256k1": "^2.2.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@crypto/core": "workspace:^",
    "@crypto/data": "workspace:^",
    "@crypto/import": "workspace:^",
    "@crypto/shared-logger": "workspace:^",
    "@crypto/shared-utils": "workspace:^"
  }
}