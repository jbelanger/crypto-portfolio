{
  "extends": "tsconfig/tsconfig.json",
  "include": [
    "**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDirs": [
      "."
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
  }
}