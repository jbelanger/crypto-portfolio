{
  "name": "exitbook",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "crypto",
    "transactions",
    "import"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "blockchain-config:generate": "pnpm -F @exitbook/import blockchain-config:generate",
    "blockchain-config:validate": "pnpm -F @exitbook/import blockchain-config:validate",
    "blockchain-providers:list": "pnpm -F @exitbook/import blockchain-providers:list",
    "blockchain-providers:validate": "pnpm -F @exitbook/import blockchain-providers:validate",
    "build": "pnpm -r build",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -F exitbook-cli dev",
    "export": "pnpm -F exitbook-cli export",
    "import": "pnpm -F exitbook-cli import",
    "lint": "pnpm -r run lint",
    "prepare": "husky",
    "prettier": "pnpm -r run prettier",
    "prettier:fix": "pnpm -r run prettier:fix",
    "providers:list": "pnpm -F @exitbook/import providers:list",
    "providers:sync": "pnpm -F @exitbook/import providers:sync",
    "providers:validate": "pnpm -F @exitbook/import providers:validate",
    "status": "pnpm -F exitbook-cli status",
    "test": "pnpm -r run test",
    "test:coverage": "node tools/run-vitest-coverage.mjs",
    "test:e2e": "node --env-file-if-exists .env node_modules/vitest/vitest.mjs run --config vitest.e2e.config.ts",
    "verify": "pnpm -F exitbook-cli verify"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "neverthrow": "^8.2.0",
    "prettier-plugin-packagejson": "^2.5.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=23.0.0",
    "pnpm": ">=10.6.2"
  }
}
