{
  "name": "exitbook",
  "version": "1.0.0",
  "description": "ExitBook - Cryptocurrency transaction import and double-entry ledger system",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:api": "nest build api",
    "build:cli": "nest build cli",
    "start": "NODE_OPTIONS='--experimental-require-module' nest start",
    "start:api": "NODE_OPTIONS='--experimental-require-module' nest start api",
    "start:cli": "NODE_OPTIONS='--experimental-require-module' nest start cli",
    "start:dev": "NODE_OPTIONS='--experimental-require-module' nest start --watch",
    "start:debug": "NODE_OPTIONS='--experimental-require-module' nest start --debug --watch",
    "start:prod": "NODE_OPTIONS='--experimental-require-module' node dist/main",
    "clean": "pnpm -r run clean",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "prettier": "pnpm -r run prettier",
    "prettier:fix": "pnpm -r run prettier:fix",
    "workspace:build": "pnpm -r build",
    "workspace:clean": "pnpm -r clean",
    "workspace:test": "pnpm -r test",
    "prepare": "husky"
  },
  "keywords": [
    "ccxt",
    "crypto",
    "transactions",
    "import",
    "balance-verification"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.6.2",
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "@scarf/scarf",
      "ccxt",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "typescript": "^5.9.2"
  }
}
