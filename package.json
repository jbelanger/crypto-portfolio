{
  "name": "ccxt-crypto-tx-import",
  "version": "1.0.0",
  "description": "Crypto transaction import and verification tool using CCXT - Monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=debug tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "import": "tsx src/cli/index.ts import",
    "import:verify": "tsx src/cli/index.ts import --verify",
    "verify": "tsx src/cli/index.ts verify",
    "status": "tsx src/cli/index.ts status",
    "setup": "mkdir -p data/logs && npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coinbase": "NODE_OPTIONS=--experimental-vm-modules jest tests/adapters/coinbase-ledger-adapter.test.ts",
    "test:coinbase:e2e": "COINBASE_E2E=true jest tests/adapters/coinbase-ledger-adapter.test.ts --testNamePattern='E2E Tests'",
    "providers:list": "tsx src/scripts/list-providers.ts",
    "providers:validate": "tsx src/scripts/validate-providers.ts", 
    "config:generate": "tsx src/scripts/generate-config.ts",
    "config:validate": "tsx src/scripts/validate-config.ts",
    "workspace:build": "pnpm -r build",
    "workspace:test": "pnpm -r test",
    "workspace:dev": "pnpm -r dev"
  },
  "keywords": [
    "ccxt",
    "crypto",
    "transactions",
    "import",
    "balance-verification"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@scure/base": "^1.2.6",
    "@scure/bip32": "^1.7.0",
    "bip32": "5.0.0-rc.0",
    "bitcoinjs-lib": "^6.1.7",
    "ccxt": "^4.4.95",
    "commander": "^11.1.0",
    "csv-parse": "^6.1.0",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "kucoin-universal-sdk": "^1.3.0",
    "node-fetch": "2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "tiny-secp256k1": "^2.2.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/node-fetch": "^2.6.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}