{
  "name": "exitbook",
  "version": "1.0.0",
  "description": "ExitBook - Cryptocurrency transaction import and double-entry ledger system",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "typecheck": "tsc -b",
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev --parallel",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "pnpm -r run prettier",
    "prettier:fix": "pnpm -r run prettier:fix",
    "prepare": "husky"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "turbo": "^2.5.6",
    "typescript-eslint": "^8.42.0",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
