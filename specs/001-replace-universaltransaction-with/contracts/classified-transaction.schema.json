{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClassifiedTransaction",
  "description": "ProcessedTransaction with all movements classified",
  "type": "object",
  "required": ["id", "source", "eventType", "timestamp", "movements", "sourceDetails", "purposeRulesetVersion"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Upstream-stable identifier"
    },
    "source": {
      "type": "string",
      "description": "Data source identifier"
    },
    "sourceUid": {
      "type": "string",
      "description": "Account/address scope at the source"
    },
    "eventType": {
      "type": "string",
      "enum": ["trade", "transfer", "fee_only", "reward", "interest", "bridge", "lend", "borrow", "liquidation", "other"],
      "description": "High-level event classification"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp (UTC)"
    },
    "movements": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/MovementClassified"
      },
      "minItems": 1,
      "description": "Array of classified financial movements"
    },
    "sourceDetails": {
      "$ref": "./processed-transaction.schema.json#/definitions/SourceDetails"
    },
    "purposeRulesetVersion": {
      "type": "string",
      "description": "Version stamp for audit trail"
    }
  },
  "definitions": {
    "MovementClassified": {
      "type": "object",
      "required": ["movementId", "currency", "quantity", "direction", "purpose", "classification"],
      "properties": {
        "movementId": {
          "type": "string"
        },
        "groupId": {
          "type": "string",
          "description": "Clusters related movements"
        },
        "currency": {
          "type": "string",
          "description": "Asset identifier"
        },
        "quantity": {
          "type": "string",
          "pattern": "^[0-9]+(\\.[0-9]+)?$",
          "description": "Always positive amount (Decimal.js serialized)"
        },
        "direction": {
          "type": "string",
          "enum": ["IN", "OUT"]
        },
        "purpose": {
          "$ref": "./processed-transaction.schema.json#/definitions/MovementPurpose"
        },
        "metadata": {
          "$ref": "./processed-transaction.schema.json#/definitions/MovementMetadata"
        },
        "classification": {
          "$ref": "#/definitions/ClassificationInfo"
        }
      }
    },
    "ClassificationInfo": {
      "type": "object",
      "required": ["ruleId", "confidence", "reason", "version"],
      "properties": {
        "ruleId": {
          "type": "string",
          "description": "Stable rule identifier for debugging"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Classification confidence (0..1)"
        },
        "reason": {
          "type": "string",
          "description": "Human-readable explanation"
        },
        "version": {
          "type": "string",
          "description": "Ruleset version (e.g., '1.0.0')"
        }
      }
    }
  }
}